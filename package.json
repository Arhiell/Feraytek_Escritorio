{
  "name": "feraytek-admin-desktop",
  "version": "1.0.0",
  "description": "App de escritorio Feraytek para administradores",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"set BROWSER=none&& set PORT=3001&& npm start\" \"wait-on http://localhost:3001 && set ELECTRON_START_URL=http://localhost:3001&& electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "dist": "electron-builder",
    "dist-win": "electron-builder --win",
    "dist-mac": "electron-builder --mac",
    "dist-linux": "electron-builder --linux"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "axios": "^1.3.0",
    "lucide-react": "^0.263.0",
    "sonner": "^0.4.0"
  },
  "devDependencies": {
    "react-scripts": "5.0.1",
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0",
    "concurrently": "^7.6.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.feraytek.admin-desktop",
    "productName": "Feraytek Admin",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js",
      "public/preload.js"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
